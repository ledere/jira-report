	{{#each report.item}}
      <div class="item">

          <div class="status status-{{#each status}}{{ $.id }}{{/each}}">{{#each status}} {{ _ }}
					{{/each}}</div>

          <h3> {{#each key}} {{ _ }} {{/each}} -  {{ summary }}</h3>




				{{{ description }}}


          <!-- attachments -->
				{{#each attachments}}
					{{#if attachment.length }}
              <h2>Attachments</h2>
              <ul>
								{{#each attachment}}
                    <li><a href="https://abnamro.atlassian.net/secure/attachment/{{ $.id }}/{{ $.name }}"
                           target="_blank">{{ $
										.name
										}}</a></li>
								{{/each}}
              </ul>
					{{/if}}
				{{/each}}


      </div>
      <hr>
	{{/each}}

</div>

